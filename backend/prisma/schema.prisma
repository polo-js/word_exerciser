datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// -------------------- Users --------------------

model User {
  id              Int     @id @default(autoincrement())
  name            String
  lastname        String?
  passwordEncoded String
  login           String

  exercisesProgresses ExercisesProgress[]
}

// -------------------- Categories --------------------

model Category {
  id       Int     @id @default(autoincrement())
  name     String
  imageSrc String?

  exercises Exercise[]
}

// -------------------- Exercises Types --------------------

model ExercisesTypes {
  id          Int     @id @default(autoincrement())
  // Упражнения/Тест
  name        String
  description String?
  icon        String?

  exercises Exercise[]
}

// -------------------- Exercises --------------------

model Exercise {
  id   Int    @id @default(autoincrement())
  name String

  /// FK → ExercisesTypes.id
  type Int

  /// FK → Categories.id
  category Int

  // relations
  exerciseType ExercisesTypes @relation(fields: [type], references: [id])
  categoryRel  Category       @relation(fields: [category], references: [id])

  expressions ExercisesExpression[]
  progresses  ExercisesProgress[]
}

// -------------------- Exercises Progresses --------------------

model ExercisesProgress {
  id Int @id @default(autoincrement())

  /// FK → Users.id
  user Int

  /// FK → Exercises.id
  exercise Int

  passedCount Int

  isReferenceMaterial String? @unique

  // relations
  userRel     User     @relation(fields: [user], references: [id])
  exerciseRel Exercise @relation(fields: [exercise], references: [id])

  @@unique([user, exercise])
}

model ReferenceMaterial {
  id          Int     @id @default(autoincrement())
  title       String
  description String
  marked      Boolean @default(false)
}

model ExercisesExpression {
  id                Int     @id @default(autoincrement())
  expression        String
  answer            Int
  example           String?
  translatedExample String?
  exercise          Int
  description       String?
  // Если есть, то это у нас Фраза
  textWithSelect    String?

  // Связи
  answerOptions ExercisesExpressionsAnswer[] @relation("AnswerOptions")
  correctAnswer ExercisesExpressionsAnswer   @relation("CorrectAnswer", fields: [answer], references: [id])
  exerciseRel   Exercise                     @relation(fields: [exercise], references: [id])

  @@map("ExercisesExpressions")
}

model ExercisesExpressionsAnswer {
  id         Int    @id @default(autoincrement())
  expression String

  /// Правильный ответ (one-to-many)
  correctFor ExercisesExpression[] @relation("CorrectAnswer")

  /// Много-ко-многим: этот вариант ответа используется как опция
  inOptionsFor ExercisesExpression[] @relation("AnswerOptions")

  // Если хотите сохранить имя таблицы:
  @@map("ExercisesExpressionsAnswer")
}
