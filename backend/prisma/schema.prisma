datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// -------------------- Users --------------------

model User {
  id           Int     @id @default(autoincrement())
  name         String
  lastname     String?
  passwordHash String
  login        String  @unique

  exercisesExpressionProgress ExerciseExpressionProgress[]
  referenceMaterialProgress   ReferenceMaterialProgress[]
}

// -------------------- Categories --------------------

model Category {
  id       Int     @id @default(autoincrement())
  name     String
  imageSrc String?

  exercises Exercise[]
}

// -------------------- Exercises Types --------------------

model ExercisesTypes {
  id          Int     @id @default(autoincrement())
  // Упражнения/Тест
  name        String
  description String?
  icon        String?

  exercises Exercise[]
}

// -------------------- Exercises --------------------

model Exercise {
  id   Int    @id @default(autoincrement())
  name String

  /// FK → ExercisesTypes.id
  type Int

  /// FK → Categories.id
  category Int

  // relations
  exerciseType ExercisesTypes @relation(fields: [type], references: [id])
  categoryRel  Category       @relation(fields: [category], references: [id])

  expressions ExercisesExpression[]
}

// -------------------- Exercises Progresses --------------------

model ExerciseExpressionProgress {
  id Int @id @default(autoincrement())

  /// FK → Users.id
  user Int

  /// FK → ExercisesExpression.id
  exerciseExpression Int

  // relations
  userRel     User                 @relation(fields: [user], references: [id])
  exerciseRel ExercisesExpression? @relation(fields: [exerciseExpression], references: [id])

  @@unique([user, exerciseExpression])
}

model ReferenceMaterialProgress {
  id Int @id @default(autoincrement())

  /// FK → Users.id
  user Int

  /// FK → Exercises.id
  referenceMaterial Int

  // relations
  userRel              User               @relation(fields: [user], references: [id])
  referenceMaterialRel ReferenceMaterial? @relation(fields: [referenceMaterial], references: [id])

  @@unique([user, referenceMaterial])
}

model ReferenceMaterial {
  id          Int    @id @default(autoincrement())
  title       String
  description String

  progress ReferenceMaterialProgress[]
}

model ExercisesExpression {
  id                Int     @id @default(autoincrement())
  expression        String
  answer            Int
  example           String?
  translatedExample String?
  exercise          Int
  description       String?
  // Если есть, то это у нас Фраза
  textWithSelect    String?

  // Связи
  answerOptions ExercisesExpressionsAnswer[] @relation("AnswerOptions")
  correctAnswer ExercisesExpressionsAnswer   @relation("CorrectAnswer", fields: [answer], references: [id])
  exerciseRel   Exercise                     @relation(fields: [exercise], references: [id])

  progress ExerciseExpressionProgress[]
}

model ExercisesExpressionsAnswer {
  id         Int    @id @default(autoincrement())
  expression String

  /// Правильный ответ (one-to-many)
  correctFor ExercisesExpression[] @relation("CorrectAnswer")

  /// Много-ко-многим: этот вариант ответа используется как опция
  inOptionsFor ExercisesExpression[] @relation("AnswerOptions")
}
